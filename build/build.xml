<?xml version="1.0" encoding="UTF-8" ?>

<packages>
	<package id="all" macro="true">
		<dependency>*</dependency>
	</package>

	<package id="core" macro="true">
		<dependency>controller</dependency>
		<dependency>exception</dependency>
		<dependency>loader</dependency>
		<dependency>request</dependency>
		<dependency>string</dependency>
		<dependency>view</dependency>
	</package>

	<package id="sandbox" macro="true">
		<dependency>core</dependency>
		<file>sandbox/*</file>
	</package>

	<package id="build" macro="true">
		<dependency>*</dependency>
		<file>build/*</file>
	</package>

	<package id="tests" macro="true">
		<dependency>*</dependency>
		<file>tests/*</file>
	</package>

	<package id="docs">
		<file>changelog.txt</file>
		<file>license.txt</file>
		<file>readme.txt</file>
	</package>

	<package id="pQuery">
		<file>vendor/pQuery.php</file>
	</package>

	<package id="sniffs">
		<file>codesniffer/*</file>
	</package>

	<package id="controller">
		<dependency>core</dependency>
		<file>europa/Europa/Controller.php</file>
	</package>

	<package id="exception">
		<file>europa/Europa/Exception.php</file>
	</package>

	<package id="form">
		<dependency>overloader</dependency>
		<dependency>string</dependency>
		<dependency>validator</dependency>
		<file>europa/Europa/Form/*</file>
		<file>europa/Europa/Form.php</file>
	</package>

	<package id="loader">
		<file>europa/Europa/Loader.php</file>
	</package>

	<package id="overloader">
		<file>europa/Europa/Overloader.php</file>
	</package>

	<package id="registry">
		<file>europa/Europa/Registry.php</file>
	</package>

	<package id="request">
		<dependency>core</dependency>
		<file>europa/Europa/Request/*</file>
		<file>europa/Europa/Request.php</file>
	</package>

	<package id="string">
		<file>europa/Europa/String.php</file>
	</package>

	<package id="unit">
		<file>europa/Europa/Unit/*</file>
	</package>
	
	<package id="validator">
		<file>europa/Europa/Validator.php</file>
	</package>

	<package id="view">
		<dependency>core</dependency>
		<file>europa/Europa/View/*</file>
		<file>europa/Europa/View.php</file>
	</package>
</packages>